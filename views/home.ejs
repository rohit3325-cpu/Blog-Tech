<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
   <title>Home Page</title>
   <style>
      body {
         background: #f7f9fc;
         font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      /* Hero Section */
      .hero {
         text-align: center;
         padding: 80px 20px;
         background: linear-gradient(135deg, #4a90e2, #6c63ff);
         color: white;
         border-radius: 16px;
         margin: 40px auto;
      }
      .hero h1 {
         font-size: 3rem;
         font-weight: bold;
      }
      .hero p {
         font-size: 1.2rem;
         margin: 15px 0;
         opacity: 0.9;
      }
      .hero .btn {
         background-color: white;
         color: #4a90e2;
         font-weight: 600;
         padding: 10px 20px;
         border-radius: 12px;
         transition: 0.3s;
      }
      .hero .btn:hover {
         background-color: #f1f1f1;
      }

      /* Blog Cards */
      .card {
         border: none;
         border-radius: 16px;
         box-shadow: 0 6px 20px rgba(0,0,0,0.08);
         transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .card:hover {
         transform: translateY(-5px);
         box-shadow: 0 10px 25px rgba(0,0,0,0.15);
      }
      .card-body {
         padding: 1.2rem;
         display: flex;
         flex-direction: column;
         justify-content: space-between;
      }
      .card-title {
         font-size: 1.1rem;
         font-weight: 600;
      }
   </style>
</head>
<body>
   <%- include('./partials/navbar') %>

   <!-- Hero Section -->
   <div class="container">
      <div class="hero">
         <h1>Welcome to BlogTech</h1>
         <p>"Where thoughts turn into words and ideas come alive."</p>
         <a href="/blog/add-new" class="btn">Write a Blog</a>
      </div>
   </div>

   <!-- Blog Topics -->
   <div class="container mt-5">
      <h2 class="mb-4 text-center">Explore Blogs</h2>
      <div class="row g-4">
         <% blogs.forEach(blog => { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
               <div class="card h-100">
                  <div class="card-body">
                     <h5 class="card-title"><%= blog.title %></h5>
                     <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary mt-3">Read More</a>
                  </div>
               </div>
            </div>
         <% }) %>
      </div>
   </div>

   <%- include('./partials/footer') %>
   <%- include('./partials/script') %>
</body>
</html>
